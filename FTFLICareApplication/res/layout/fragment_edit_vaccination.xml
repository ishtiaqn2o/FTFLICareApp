<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="30dp" >

        <TextView
            android:id="@+id/vaccinationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Vaccination"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="31dp" />
        <TextView
            android:id="@+id/vaccineNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/vaccineNameTextView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textStyle="bold"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/vaccineNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/dateEditText"
            android:inputType="date"
            android:textColor="#000000" />
   
        

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/dateTextView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textStyle="bold"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/pickDayTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/dateEditText"
            android:inputType="date"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/vaccineStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/vaccineStatusTextView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textStyle="bold"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/vaccineStatusEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:hint="@string/vaccineStatusEditText"
            android:inputType="text"
            android:textColor="#000000" />

        <Button
            android:id="@+id/createVaccine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#607D8B"
            android:onClick="insertData"
            android:padding="14dp"
            android:text="@string/buttonSubmit"
            android:textColor="#ffffff"
            android:typeface="monospace" />
    </LinearLayout>

</ScrollView>
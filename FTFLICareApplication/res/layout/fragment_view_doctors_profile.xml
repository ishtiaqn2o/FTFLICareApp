<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/headerDoctorProfile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@string/headerDoctorProfile"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:typeface="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="@string/textName"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/doctorNameShowTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="@string/etDoctorName"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvSpeciality"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    
                    android:text="@string/tvSpeciality"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/specialityShowTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="@string/etSpeciality"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                 android:padding="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="@string/tvPhone"
                    android:textColor="#000000"
                      android:textSize="20sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/phoneShowTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                  
                    android:inputType="phone"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                 android:padding="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="@string/emailTextView"
                    android:textColor="#000000"
                       android:textSize="20sp"
                    android:typeface="monospace" />

              <TextView
                    android:id="@+id/emailShowTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                   
                     android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                 android:padding="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/chamberTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="@string/chamberTextView"
                    android:textColor="#000000"
                       android:textSize="20sp"
                    android:typeface="monospace" />

                 <TextView
                    android:id="@+id/chamberShowTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    
                   android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:typeface="monospace" />
            </LinearLayout>
                  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#4A4A49"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/mail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                  
                    android:scaleType="center"
                    android:src="@drawable/mail" />

                <ImageButton
                    android:id="@+id/call"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                       android:layout_weight="3"
                   
                    android:src="@drawable/call" />
                
            </LinearLayout>
        </LinearLayout>

        
    </LinearLayout>

</ScrollView>